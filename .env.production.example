# Production Environment Variables
# Copy this to Vercel Dashboard > Settings > Environment Variables

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://your-domain.com

# Payment Providers (PRODUCTION KEYS)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_xxxxxxxxxxxxx
STRIPE_SECRET_KEY=sk_live_xxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxx

NEXT_PUBLIC_PAYPAL_CLIENT_ID=xxxxxxxxxxxxx
PAYPAL_CLIENT_SECRET=xxxxxxxxxxxxx

NEXT_PUBLIC_PAYSTACK_PUBLIC_KEY=pk_live_xxxxxxxxxxxxx
PAYSTACK_SECRET_KEY=sk_live_xxxxxxxxxxxxx

# Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Email Service (for order confirmations)
EMAIL_SERVICE_API_KEY=xxxxxxxxxxxxx
EMAIL_FROM_ADDRESS=orders@your-domain.com
EMAIL_FROM_NAME=Fare

# Database (if needed for customer records)
DATABASE_URL=postgresql://user:password@host:port/database

# Security
NEXTAUTH_SECRET=xxxxxxxxxxxxx
NEXTAUTH_URL=https://your-domain.com

# Feature Flags
NEXT_PUBLIC_ENABLE_DEMO=true
NEXT_PUBLIC_DEMO_URL=https://lsk.fare2u.com/

# Monitoring (optional)
SENTRY_DSN=xxxxxxxxxxxxx
SENTRY_AUTH_TOKEN=xxxxxxxxxxxxx
